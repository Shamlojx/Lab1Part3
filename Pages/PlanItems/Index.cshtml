@page 
@using System.Data.SqlClient
@using Lab1Part3.Pages.DB
@model Lab1Part3.Pages.PlanItems.IndexModel
@{
    ViewData["Title"] = "PlanItems";
}

<h2 class="h2">Plan Items</h2>

<table class="table table-bordered table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th>Plan Name:</th>
            <th>Plan Item Description:</th>
            <th>Steps Completed:</th>
            
        </tr>
    </thead>
    <tbody>
        @{
            // @ Symbol for a verbatim / multi-line string
            string sqlQuery = @"SELECT Plans.PlanName, PlanItem.PlanItemDescription, PlanItem.StepsCompleted
        from Plans
        INNER JOIN PlanItem
        on PlanItem.PlanID =Plans.PlanID;";

            SqlDataReader QueryResults = DBClass.GeneralReaderQuery(sqlQuery);

            while (QueryResults.Read())
            {
                <tr>
                    <td>@QueryResults["PlanName"]</td>
                    <td>@QueryResults["PlanItemDescription"]</td>
                    <td>@QueryResults["StepsCompleted"]</td>
                </tr>
            }

            DBClass.Lab1DBConnection.Close();
        }

    </tbody>
</table>

<a asp-page="AddPlanItem" class="btn btn-primary">Add a Plan Item -></a>